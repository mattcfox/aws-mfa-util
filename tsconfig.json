{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,
    "outDir": "./lib",
    "strict": true,
    "baseUrl": "./src/",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "composite": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": ["src/*", "package.json"],
  "exclude": ["tests/*"]
}
